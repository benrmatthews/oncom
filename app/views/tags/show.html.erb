<h1>Communities tagged with <%= @tag.name %></h1>

<table class="table table-striped">
  <thead>
    <tr>
      <th>Name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @related_communities.each do |community| %>
      <tr>
        <td><h5><%= link_to community.name, community_path(community) %></h5></td>
      </tr>
    <% end %>
  </tbody>
</table>
