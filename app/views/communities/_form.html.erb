<%= simple_form_for(@community) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :name %>
    <%= f.input :about, as: :text, input_html: {rows: "3" } %>
    <%= f.input :category %>
    <%= f.input :link %>
    <%= f.input :rss %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
