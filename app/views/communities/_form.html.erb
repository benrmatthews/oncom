<div class="authform">
  <%= simple_form_for(@community) do |f| %>
  <%= f.error_notification %>
  
  <h3>New Community</h3>
  <div class="form-inputs">
    <div class="form-group">
      <%= f.input :name %>
    </div>
    <div class="form-group">
      <%= f.input :about, as: :text, input_html: {rows: "3" } %>
    </div>
    <div class="form-group">
      <%= f.input :category %>
    </div>
    <div class="form-group">
      <%= f.input :link %>
    </div>
    <!-- <div class="form-group">
      <!-- <%= f.input :rss %>
    </div> -->
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
