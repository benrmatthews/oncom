<% cache do %>
<table class="table table-striped">
  <thead>
    <tr>
      <th>Name</th>
      <th>About</th>
      <th>Link</th>
      <!-- <th>RSS</th> -->
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @communities.each do |community| %>
      <tr>
        <td><h5><%= link_to community.name, community %></h5></td>
        <td><%= community.about %></td>
        <td><%= markdown community.link %></td>
        <!-- <td><%= community.rss %></td> -->
        <td><%= link_to 'Show', community, class: "btn btn-primary" %></td>
        <% if current_user.admin? %>
        <td><%= link_to 'Edit', edit_community_path(community), class: "btn btn-success" %></td>
        <td><%= link_to 'Destroy', community, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-warning" %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>
<% end %>
