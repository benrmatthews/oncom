<% cache do %>
  <div id="container" align="center">
    <%= paginate @communities %>
  </div>
<table class="table table-striped">
  <thead>
    <tr>
      <th>Loves</th>
      <th>Name</th>
      <th>About</th>
      <th>Link</th>
      <th>Category</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @communities.each do |community| %>
      <tr>
        <td><%= link_to "â™¡", like_community_path(community), method: :put %> <%= community.score %></td>
