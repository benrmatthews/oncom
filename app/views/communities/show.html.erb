<p id="notice"><%= notice %></p>

<p>
  <strong>Name:</strong>
  <%= @community.name %>
</p>

<p>
  <strong>About:</strong>
  <%= markdown @community.about %>
</p>

<p>
  <strong>Category:</strong>
  <%= markdown @community.category %>
</p>

<p>
  <strong>Link:</strong>
  <%= markdown @community.link %>
</p>

<p>
  <strong>Rss:</strong>
  <%= markdown @community.rss %>
</p>

<p>
  Tags:
  <% @community.tags.each do |tag| %>
    <%= link_to tag.name, tag_path(tag) %>
  <% end %>
</p>

<%= link_to 'Edit', edit_community_path(@community) %> |
<%= link_to 'Back', communities_path %>
