<p id="notice"><%= notice %></p>

<p>
  <strong>Name:</strong>
  <%= @community.name %>
</p>

<p>
  <strong>About:</strong>
  <%= markdown @community.about %>
</p>

<p>
  <strong>Category:</strong>
  <%= markdown @community.category %>
</p>

<p>
  <strong>Link:</strong>
  <%= markdown @community.link %>
</p>

<p>
  <strong>Rss:</strong>
  <%= markdown @community.rss %>
</p>

<p>
  <strong>Tags:</strong>
  <% @post.tags.any? %>
    <% @post.tags.each do |tag| %>
    <%= link_to tag.name, tagged_url(:tag => tag.name) %>
  <% end %>
</p>


